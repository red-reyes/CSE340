<div class="account-container">
    <% if (typeof flashMessage !== 'undefined') { %>
        <div class="flash-message">
            <%= flashMessage %>
        </div>
    <% } %>
    <h1><%= title %></h1>
    
    <p>Confirm Deletion - The delete is permanent.</p>
    
    <form action="/inv/delete" method="post">
        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>

        <div class="form-group">
            <label for="inv_make">Make:</label>
            <input type="text" id="inv_make" name="inv_make" <% if(locals.inv_make) { %> value="<%= locals.inv_make %>" <% } %> placeholder="Min of 3 Characters" readonly required>
        </div>
        <div class="form-group">
            <label for="inv_model">Model:</label>
            <input type="text" id="inv_model" name="inv_model" <% if(locals.inv_model) { %> value="<%= locals.inv_model %>" <% } %> placeholder="Min of 3 Characters" readonly required>
        </div>
        <div class="form-group">
            <label for="inv_year">Year:</label>
            <input type="number" id="inv_year" name="inv_year" <% if(locals.inv_year) { %> value="<%= locals.inv_year %>" <% } %> placeholder="4-digit year" readonly required>
        </div>
        <div class="form-group">
            <label for="price">Price:</label>
            <input type="number" id="inv_price" name="inv_price" <% if(locals.inv_price) { %> value="<%= locals.inv_price %>" <% } %> placeholder="decimal or integer" readonly required>
        </div>
        <button type="submit">Delete</button>
    </form>
</div>
